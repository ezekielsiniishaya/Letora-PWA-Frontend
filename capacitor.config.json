{
  "appId": "com.letora.app",
  "appName": "Letora",
  "webDir": "dist",
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "backgroundColor": "#A20BA2",
      "androidSplashResourceName": "splash",
      "androidScaleType": "CENTER_CROP",
      "androidSpinnerStyle": "large",
      "iosSpinnerStyle": "small",
      "spinnerColor": "#FFFFFF",
      "showSpinner": false,
      "splashFullScreen": true,
      "splashImmersive": false,
      "layoutName": "launch_screen",
      "useDialog": false,
      "fadeOutDuration": 300
    },
    "StatusBar": {
      "overlaysWebView": false,
      "style": "LIGHT",
      "backgroundColor": "#A20BA2"
    },
    "PushNotifications": {
      "presentationOptions": [
        "badge",
        "sound",
        "alert"
      ]
    }
  }
}